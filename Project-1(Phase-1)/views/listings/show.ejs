<% layout("./layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-3" >
   <h2>Listing Details</h2></div>
   <div class="card col-6 offset-3 show-card">
    <img src="<%= listing.image %>" class="card-img-top show-img" alt="Listing-Image">
  <div class="card-body">
    <p class="card-text"><b><%= listing.title %></b> <br>
      <%= listing.description %> <br>
      &#8377 <%= listing.price.toLocaleString("en-IN") %> <br>
      <%= listing.country %> <br>
      <%= listing.location %>
    
    </p>
  </div>
   </div>
   <br>
   </div>
   <div class="btns">
    <a href="/listings/<%= listing.id %>/edit" class="btn btn-dark add-btn  offset-3">Edit</a>

    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" style="display:inline;">
      <button type="submit" class="btn btn-dark offset-5" onclick="return confirm('Are you sure you want to delete this listing?');">Delete</button>
    </form> 
   </div>
