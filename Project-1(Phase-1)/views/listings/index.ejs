<% layout("./layouts/boilerplate") %>
<body>
<h2>All Listings</h2>
<div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">

  <% for(Listing of alllistings) { %>
<a href="/listings/<%= Listing.id %>" style="text-decoration: none;">
    <div class="card col" style="width: 20 rem;">
      <img src="<%= Listing.image %>" class="card-img-top" alt="Listing-Image" style="height: 20rem;" >
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text"> <b> <%= Listing.title %> </b><br> <%= Listing.price.toLocaleString("en-IN") %>/night
        </p>
      </div>
    </div>
  </a>
  
    <%}%>
  
  
</div>


<!--<a href="/listings/new">Add a new Listing</a>-->

</body>
